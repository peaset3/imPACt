             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Conversation"
             x:Class="imPACt.Views.ConversationPage">
    <StackLayout Padding="0,20,0,0">
        <Label Text="Hello there!" Margin="20"  HorizontalOptions="Start" />
